{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "module": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmitOnError": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "useDefineForClassFields": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "./futsal-server",
    "./futsal-backend",
    "./webpack.config.js",
    "./dist"
  ]
}
